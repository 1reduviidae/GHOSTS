<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
  </startup>
  <appSettings>
    <add key="system.id.url" value="https://telemetry.exercise.mil/api/clientid" />
    <add key="system.clientresults.url" value="https://telemetry.exercise.mil/api/clientresults" />
    <add key="system.clientresults.sleep" value="600000" />
    <add key="system.clientupdates.url" value="https://telemetry.exercise.mil/api/clientupdates" />
    <add key="system.clientupdates.sleep" value="600000" />
    <add key="health.enabled" value="true" />
    <add key="health.cyclesleep" value="600000" />
    <add key="handlers.enabled" value="true" />
    <add key="handlers.chrome.extensions" value="" /> <!--Comma separated list of extensions to load with Chrome C:\\Projects\\chrome-ext-exfill-->
    <add key="handlers.excel.writedirectory" value="%homedrive%%homepath%\Documents" />
    <add key="handlers.powerpoint.writedirectory" value="%homedrive%%homepath%\Documents" />
    <add key="handlers.word.writedirectory" value="%homedrive%%homepath%\Documents" />
  </appSettings>
  <log4net>
    <appender name="FileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="logs\app.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <filter type="log4net.Filter.LevelRangeFilter">
        <acceptOnMatch value="true" />
        <levelMin value="ERROR" />
        <levelMax value="FATAL" />
      </filter>
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%property{log4net:HostName}|%date|%-5level|%logger|%message%newline" />
      </layout>
      <filter type="log4net.Filter.DenyAllFilter" />
    </appender>
    
    <appender name="FileAppenderReport" type="log4net.Appender.RollingFileAppender">
      <file value="logs\clientupdates.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="HEALTH"/>
        <param name="LevelMax" value="TIMELINE"/>
      </filter>
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%-5level|%message%newline" />
      </layout>
      <filter type="log4net.Filter.DenyAllFilter" />
    </appender>
    
    <level>
      <name value="HEALTH" />
      <value value="50000" />
    </level>
    <level>
      <name value="TIMELINE" />
      <value value="50001" />
    </level>
    
    <logger name="FileAppenderReport">
      <level value="HEALTH"/>
      <level value="TIMELINE"/>
    </logger>
    <root>
      <level value="ALL" />
      <appender-ref ref="FileAppender" />
      <appender-ref ref="FileAppenderReport">
        <level value="TIMELINE" />
        <level value="HEALTH" />
      </appender-ref>
    </root>
  </log4net>
</configuration>